<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>
<hr>
<h3>Add Case Number to Track</h3>
	
	<%= form_with url: 'add', model: @tracker do |f| %>
	  <%= f.label :cn %>
	  <%= f.text_field :cn %>
	  <%= f.submit class: 'button round blue' %>  
	<% end %>


<hr>
<%= link_to "Tracker Index", trackers_index_path, class: 'button round blue' %>

<% if @trackers.nil? %>
	<p><strong>No</strong>Cases being Tracked.</p>
<% else %> 
		<table> 
			<tr>
			<th>Count</th>
			<th>Case Number</th>
			<th>Active</th>
			</tr>
			<tr>
				<% count = 1 %>
				<% @trackers.each do |tracker| %>	
					<td><%= count %></td>
					<td><%= tracker.cn %></td>
					<td><%= tracker.active %></td>
					<td><%= button_to "  ", pages_toggle_path(tracker: tracker), class: "button round green" %></td>
				<% count += 1 %>
				
			</tr>
			<% end %> 
		</table>
<% end %>  


